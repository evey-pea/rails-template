<p id="notice"><%= notice %></p>
<h1>All huggers</h1>
<% @profiles.each do |profile| %>
  <div class="card">
    <%= link_to profile do %>
      <%= profile.name_display %>
    <% end %>
    <%= profile.description %>
    <%= profile.suburb %>
    <%= profile.state %>
    <%= profile.postcode %>
  </div>
<% end %>